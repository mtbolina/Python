LimiteKG=50.00  //valor do limite
multaKG=4.00    //valor da multa por kg

def CalculoExcesso(peso):
    if peso>LimiteKG:           // Se o peso for mair que o limite 
        excesso=peso-LimiteKG   // O program realiza a subtracao do peso do peixe em relacao ao limite, o resultado disso e armazenado em uma variavel 'excesso'
        valorMulta=excesso*multaKG  // o valor da multa entao e o resultado do valor do excesso vezes(*) o valor da multa por quilo(kg)
        print(f"Otima pescaria! \n Mas o limite foi excedido! \n O peso do peixe e: {peso}Kg, o excesso foi de {excesso}Kg e o valor a pagar e de : R${valorMulta}")
    else:
        excesso=0.00
        valorMulta=0.00
        print("Boa pesca! Nao ha multas a pagar")
 
        
peso=float(input("Digite o tamanho do peso em KG: "))

Valor_a_pagar=CalculoExcesso(peso)

