Nint=int(input("Digite o primeiro numero (inteiro): "))
Nint2=int(input("Digite o segundo numero (inteiro): "))
Nreal=float(input("Digite o terceiro numero (real): "))

produto=(Nint*2)+(Nint2/2)
print("O produto do dobro do primeiro numero com metade do segundo numero e: ",produto)

triplo=Nint*3+Nreal
print("A soma do triplo do primeiro numero com o terceiro numero e: ",triplo)

cubo=Nreal**3
print("O terceiro numero elevado ao cubo e: ",cubo)
